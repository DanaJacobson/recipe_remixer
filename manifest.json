{
  "manifest_version": 3,
  "name": "Recipe Remixer",
  "version": "1.0",
  "description": "Modify recipes to match dietary preferences.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon/icon48.png",
      "64": "icon/icon64.png",
      "128": "icon/icon128.png"
    }
  },
  "icons": {
    "48": "icon/icon48.png",
    "64": "icon/icon64.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["loading.html", "loading.js"],
      "matches": ["<all_urls>"]
    }
  ]
}